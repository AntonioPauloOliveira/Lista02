package lista02;
import java.util.Scanner;
public class Q07 {
	public static void main(String[] args) {
		Scanner scr = new Scanner (System.in);
		int lados,medida;
		lados=scr.nextInt();
		medida=scr.nextInt();
		switch (lados) {
		case 3: System.out.println("É triangulo e o valor do perímetro é: "+3*medida);
		break;
		case 4: System.out.println("É quadrado e o valor da sua área é: "+medida*medida);
		break;
		case 5: System.out.println("Pentágono");
		break;
		default: System.out.println("Fora dos parâmetros");
		break;
		}
	}
}
